# This Makefile was generated by the made script:
# https://github.com/alx741/made
#
# Replace OUTPUTS with your output PNGs
#
# Dependencies:
# 	Inkscape


OUTPUTS = logo.png \
		  logo_small.png \
		  logo_margin.png \
		  favicon.png \
		  design.png \

make: $(OUTPUTS)

logo.png: logo.svg
	inkscape -D $< -e $@

design.png: design.svg
	inkscape -D $< -e $@

favicon.png: favicon.svg
	inkscape -C $< -e $@

logo_small.png: logo.png
	convert $< -resize 200x55 $@

logo_margin.png: logo.png
	convert $< -background transparent -gravity center -extent 1400x250 $@

clean:
	rm *.png
